.fixed
  padding 1em
  color white

.topleft
  position fixed
  top 1em
  left 1em
  background-color crimson
  border-radius 0.5em
  box-shadow 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12)

.topright
  position fixed
  top 0
  right 0
  background-color darkorange

.center
  position fixed
  top 50%
  right 50%
  background-color rebeccapurple
  font-size 1.5em
  border-radius 4em
  box-shadow 0 0.1em 0.3em 0 rgba(0,0,0,0.5), 0 0.1em 0.6em rgba(0,0,0,0.4)
